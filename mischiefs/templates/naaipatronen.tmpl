<main>
  <h1>Naaipatronen</h1>

  <section>
    <h2>Kinderrokje</h2>

    <div id="kinderrokje-patroon"></div>

    <table>
      <thead>
        <tr>
          <th>Leeftijd</th>
          <th>Lengte</th>
          <th>Heupomvang</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>3 jaar</td><td>35cm</td><td>50cm</td>
          <td>
            <form hx-post="/naaipatronen/kinderrokje" hx-target="#kinderrokje-patroon">
              <input type="hidden" name="lengte" value="35"/>
              <input type="hidden" name="heupomvang" value="50"/>
              <button type="submit">Patron genereren</button>
            </form>
          </td>
        </tr>
        <tr>
          <td>5 jaar</td><td>45cm</td><td>60cm</td>
          <td>
            <form hx-post="/naaipatronen/kinderrokje" hx-target="#kinderrokje-patroon">
              <input type="hidden" name="lengte" value="45"/>
              <input type="hidden" name="heupomvang" value="60"/>
              <button type="submit">Patron genereren</button>
            </form>
          </td>
        </tr>
      </tbody>
    </table>
  </section>
</main>
